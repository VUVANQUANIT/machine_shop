# Database Configuration
# IMPORTANT: Do NOT add timezone parameter in URL - configure it in application.properties
# Neon/cloud Postgres: thêm ?sslmode=require vào cuối URL (ví dụ jdbc:postgresql://host:5432/db?sslmode=require)
DATABASE_URL=jdbc:postgresql://localhost:5432/machineshop
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=your_secure_password_here

# JWT Configuration
# Generate secure key: openssl rand -base64 64
JWT_SECRET=your_very_long_and_secure_secret_key_at_least_64_characters_long
JWT_EXPIRATION=86400000
JWT_REFRESH_EXPIRATION=604800000

# Server Configuration
SERVER_PORT=8080

# Environment (optional)
SPRING_PROFILES_ACTIVE=dev
